@using MealPrep.Models;
@model MealPrep.Models.Meal

@{
  Layout = "_Layout";
}
<!DOCTYPE html>
<div class="center">
<div class="searchBar">
  <form action="/addMeals" method="post">
    <label for="ingredient">Add a new item</label>
    <input id="ingredient" name="ingredient" type="text">
    <button type="submit">Submit</button>
  </form>
</div>
<h1>Meal from your searched ingredient</h1>

@if (@Model == null){
  <h1>Go to the submission page to get ingredients.</h1>
}
else
{
  <div class="underline">
  <h1 class="underline"><a href=@Model.results[0].sourceUrl>@Model.results[0].title</a></h1>
  <img src=@Model.results[0].image>
  </div>
  <div class="underline">
  <h1 class="underline"><a href=@Model.results[1].sourceUrl>@Model.results[1].title</a></h1>
  <img src=@Model.results[1].image>
  </div>
  <div class="underline">
  <h1 class="underline"><a href=@Model.results[2].sourceUrl>@Model.results[2].title</a></h1>
  <img src=@Model.results[2].image>
  </div>
}


<h4>Add a new Meal Plan</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Breakfast)
  @Html.TextBoxFor(model => model.Breakfast)
  @Html.LabelFor(model => model.Lunch)
  @Html.TextBoxFor(model => model.Lunch)
  @Html.LabelFor(model => model.Dinner)
  @Html.TextBoxFor(model => model.Dinner)
  @Html.LabelFor(model => model.Date)
  @Html.TextBoxFor(model => model.Date)
  <input type="submit" value="Add new Meal plan" />
}

</div>