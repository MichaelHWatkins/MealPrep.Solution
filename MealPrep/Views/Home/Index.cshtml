@using MealPrep.Models;
@{
  Layout = "_Layout";
}
<!DOCTYPE html>
<div class="center">
<div class="searchBar">
  <form action="/addMeals" method="post">
    <label for="ingredient">Add a new item</label>
    <input id="ingredient" name="ingredient" type="text">
    <button type="submit">Submit</button>
  </form>
</div>
<h1>Meal from your searched ingredient</h1>

@if (@Model == null){
  <h1>Go to the submission page to get ingredients.</h1>
}
else
{
  <h1>@Model.results[0].title</h1>
  <img src=@Model.results[0].image>
  <h1>@Model.results[0].sourceUrl</h1>
  <h1>@Model.results[1].title</h1>
  <img src=@Model.results[1].image>
  <h1>@Model.results[1].sourceUrl</h1>
  <h1>@Model.results[2].title</h1>
  <img src=@Model.results[2].image>
  <h1>@Model.results[2].sourceUrl</h1>
}
</div>